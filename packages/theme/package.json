{
  "name": "@daren/theme",
  "version": "2.1.6",
  "repository": {
    "type": "git",
    "url": "git@github.com:darenmalfait/darenui.git",
    "directory": "packages/theme"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "default": "./dist/esm/index.js"
    },
    "./dist/darenui.css": "./dist/darenui.css",
    "./package.json": "./package.json"
  },
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx ts-node ./lib/create-global-css.ts && run-s build:*",
    "build:source": "tsup ./index.ts --format esm,cjs --legacy-output --dts ./index.ts",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "lint": "run-p lint:*",
    "lint:lib": "eslint lib --ext .ts,.tsx --config ../../.eslintrc.js",
    "lint:types": "tsc --noEmit",
    "start": "nodemon --watch lib --exec yarn build -e ts,tsx",
    "test": "jest --env=jsdom --passWithNoTests",
    "test:cov": "yarn test --coverage",
    "version": "yarn build"
  },
  "dependencies": {
    "@daren/utils": "^1.5.1"
  },
  "devDependencies": {
    "react": "^17.0.2"
  },
  "peerDependencies": {
    "react": ">=17.0.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
