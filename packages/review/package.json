{
  "name": "@daren/review",
  "version": "1.0.14",
  "description": "A simple review component",
  "repository": {
    "type": "git",
    "url": "git@github.com:darenmalfait/darenui.git",
    "directory": "packages/review"
  },
  "author": "Daren Malfait <github@daren.be>",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "unpkg": "dist/index.global.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "lib"
  ],
  "tsup": {
    "entry": [
      "lib/index.ts"
    ],
    "format": [
      "esm",
      "cjs",
      "iife"
    ]
  },
  "scripts": {
    "build": "run-s build:*",
    "build:source": "tsup --env.NODE_ENV production --minify --sourcemap --clean --dts",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "lint": "run-p lint:*",
    "lint:lib": "eslint lib --ext .ts,.tsx --config ../../.eslintrc.js",
    "lint:types": "tsc --noEmit",
    "start": "nodemon --watch lib --exec yarn build -e ts,tsx",
    "test": "jest --env=jsdom --passWithNoTests",
    "test:cov": "yarn test --coverage",
    "version": "yarn build"
  },
  "devDependencies": {
    "@daren/typography": "^1.4.6",
    "@daren/utils": "^1.5.5",
    "@heroicons/react": "^2.0.11",
    "react": "^18.2.0"
  },
  "peerDependencies": {
    "react": ">=18.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
