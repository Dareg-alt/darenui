{
  "name": "@daren/utils",
  "version": "1.5.2",
  "repository": {
    "type": "git",
    "url": "git@github.com:darenmalfait/darenui.git",
    "directory": "packages/utils"
  },
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "unpkg": "dist/index.global.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "lib"
  ],
  "tsup": {
    "entry": [
      "lib/index.ts"
    ],
    "format": [
      "esm",
      "cjs",
      "iife"
    ]
  },
  "scripts": {
    "build": "run-s build:*",
    "build:source": "tsup --env.NODE_ENV production --minify --sourcemap --clean --dts",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "lint": "run-p lint:*",
    "lint:lib": "eslint lib --ext .ts,.tsx --config ../../.eslintrc.js",
    "lint:types": "tsc --noEmit",
    "start": "nodemon --watch lib --exec yarn build -e ts,tsx",
    "test": "jest --env=jsdom --passWithNoTests",
    "test:cov": "yarn test --coverage",
    "version": "yarn build"
  },
  "dependencies": {
    "react": "^17.0.2"
  },
  "devDependencies": {
    "clsx": "^1.1.1"
  },
  "peerDependencies": {
    "react": ">=17.0.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
