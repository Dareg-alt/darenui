{
  "name": "darenui",
  "private": true,
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/darenmalfait/darenui.git"
  },
  "author": "Daren Malfait",
  "main": "index.js",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna run build --stream",
    "build:css": "npx tailwindcss build .storybook/styles.css -o .storybook/styles.output.css",
    "build-storybook": "build-storybook",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "postinstall": "npm run bootstrap",
    "lint:lib": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:types": "tsc --noEmit",
    "prepare": "husky install",
    "publish:ci": "lerna publish from-package --yes --no-verify-access",
    "start": "yarn build && yarn storybook",
    "storybook": "start-storybook -p 6006",
    "validate": "concurrently yarn:lint:*",
    "version:ci": "lerna version --yes --conventional-commits --conventional-graduate=* --create-release github --message 'chore(release): publish'"
  },
  "resolutions": {
    "**/react": "17.0.2",
    "**/react-dom": "17.0.2"
  },
  "dependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.10",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/eslint-plugin": "^7.16.5",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.16.10",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/runtime": "^7.16.7",
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@storybook/addon-essentials": "^6.4.13",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.4.13",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.4.0",
    "eslint-config-daren": "^3.1.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "storybook-addon-performance": "^0.16.1",
    "tailwindcss": "^3.0.15",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "storybook-dark-mode": "^1.0.8"
  }
}